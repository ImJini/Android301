<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".star.Star_B_Main_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:src="@drawable/main_event1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textColor="@color/sd_colore"
                android:textSize="20dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ until next Reward"
                android:textColor="@color/sd_colore"
                android:textSize="18dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:max="12"
                android:progress="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_star"
                android:layout_marginLeft="-20dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text=" / 12 ★"
                android:textColor="@color/sd_colore"
                android:textSize="20dp" />

        </RelativeLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@drawable/middle_tab1"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="What's New"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/middle_tab2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:text="Coupon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/middle_tab3"
                    android:layout_width="50dp"
                    android:layout_height="30dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00님을 위한 추천 메뉴" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="10dp"
            android:id="@+id/recv_star_b_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_event4" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_event5" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_event6" />
    </LinearLayout>



</ScrollView >